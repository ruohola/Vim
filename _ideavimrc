"load the vimrc
source ~/vimfiles/vimrc

let mapleader=" "

" ============= GENERAL =============

"enable surround plugin emulation
"makes <Leader>dd/cc slow, because of ds and cs mappings
set surround

"disable linenumbers because of lag and use a plugin
set norelativenumber
set nonumber


" ============= MAPPINGS =============

"don't show match highlights
nnoremap <Esc> <Esc>:noh<CR>

"change color scheme
nnoremap <F12> :action ChangeColorScheme<CR>

"move between splits
nnoremap <A-L> :action NextSplitter<CR>
nnoremap <A-H> :action PrevSplitter<CR>

"move between tabs
nnoremap <A-M> :action NextTab<CR>
nnoremap <A-N> :action PreviousTab<CR>

"fix C-U and C-W
inoremap <C-U> <C-U>
inoremap <C-W> <C-W>

"source ideavimrc
nnoremap <Leader>so :so ~/_ideavimrc<CR>

"activate KJump
nnoremap <leader>f :action KJumpAction<CR>
