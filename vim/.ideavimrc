let mapleader=' '


" ============= PLUGINS =============

set surround  " makes <Leader>dd slow, because of ds mapping
set multiple-cursors

" activate KJump
nnoremap <leader>f :action KJumpAction<CR>


" ============= GENERAL =============

" line numbers
set number relativenumber

" search settings
set incsearch hlsearch ignorecase smartcase gdefault

set timeoutlen=300
set clipboard=unnamed  " use system clipboard
set scrolloff=1        " pad scrolling with one line
set showmode           " show current mode in statusbar
set visualbell         " removes errorbells


" ============= MAPPINGS =============

" move between splits
nnoremap <A-L> :action NextSplitter<CR>
nnoremap <A-H> :action PrevSplitter<CR>

"move between tabs
" nnoremap <A-I> :action NextTab<CR>  " not currently working
nnoremap <A-U> :action PreviousTab<CR>

" makes these easier to use
noremap , :
nnoremap : ;
nnoremap ; ,
noremap q, q:
noremap @, @:

" make Y behave the same way as D and C
nnoremap Y y$

" makes v and V more consistent with other commands
nnoremap vv V
nnoremap V <C-V>$

" makes S more useful
nnoremap S ciw

" change enter behaviour
nnoremap <CR> o<Esc>
nnoremap <S-Enter> O<Esc>
nnoremap <C-Enter> mzo<Esc>`z
nnoremap <C-S-Enter> mzO<Esc>`z
nnoremap <Leader><CR> a<CR><Esc>

" better way to indent
nnoremap <BS> <<
nnoremap <TAB> >>
vnoremap <BS> <gv
vnoremap <TAB> >gv

" persistent visuals
vnoremap > >gv
vnoremap < <gv
vnoremap <C-X> <C-X>gv
vnoremap <C-A> <C-A>gv

" Q plays back q macro
nnoremap Q @q

" dont copy to clipboard when editing with <Leader><key>
nnoremap <Leader>d "_d
nnoremap <Leader>D "_D
vnoremap <Leader>d "_d

" clear highlights
nnoremap <Esc> <Esc>:noh<CR>

" makes these usable from outside the braces also
nnoremap ci) %ci)
nnoremap di) %di)
nnoremap ca) %ca)
nnoremap da) %da)
nnoremap ci( %ci(
nnoremap di( %di(
nnoremap ca( %ca(
nnoremap da( %da(
nnoremap ci] %ci]
nnoremap di] %di]
nnoremap ca] %ca]
nnoremap da] %da]
nnoremap ci[ %ci[
nnoremap di[ %di[
nnoremap ca[ %ca[
nnoremap da[ %da[
nnoremap ci} %ci}
nnoremap di} %di}
nnoremap ca} %ca}
nnoremap da} %da}
nnoremap ci{ %ci{
nnoremap di{ %di{
nnoremap ca{ %ca{
nnoremap da{ %da{

