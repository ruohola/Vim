{
  "title":"Own rules",
  "rules":[
    {
      "description":"Change caps_lock to control if pressed with other keys, to escape if pressed alone.",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"caps_lock",
            "modifiers":{
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"left_control"
            }
          ],
          "to_if_alone":[
            {
              "key_code":"escape"
            }
          ]
        }
      ]
    },
    {
      "description":"Change right_command + u/i/y/n to cmd←/cmd→/pgup/pgdn keys",
      "manipulators":[
        {
          "type":"basic",
          "from":{
            "key_code":"y",
            "modifiers":{
              "mandatory":[
                "right_command"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"page_up"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"n",
            "modifiers":{
              "mandatory":[
                "right_command"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"page_down"
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"u",
            "modifiers":{
              "mandatory":[
                "right_command"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"left_arrow",
              "modifiers":[
                "left_command"
              ]
            }
          ]
        },
        {
          "type":"basic",
          "from":{
            "key_code":"i",
            "modifiers":{
              "mandatory":[
                "right_command"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"right_arrow",
              "modifiers":[
                "right_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description":"Change right_command + tab to tab",
      "manipulators":[
        {
          "from":{
            "key_code":"tab",
            "modifiers":{
              "mandatory":[
                "right_command"
              ],
              "optional":[
                "any"
              ]
            }
          },
          "to":[
            {
              "key_code":"tab"
            }
          ],
          "type":"basic"
        }
      ]
    }
  ]
}
