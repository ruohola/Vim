{
    "title": "Change right_shift + left_shift to caps_lock",
    "rules": [
        {
            "description": "Change right_shift + left_shift to caps_lock",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_shift",
                        "modifiers": {
                            "mandatory": [
                                "right_shift"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "caps_lock"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_shift",
                        "modifiers": {
                            "mandatory": [
                                "left_shift"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "caps_lock"
                        }
                    ]
                }
            ]
        }
    ]
}
